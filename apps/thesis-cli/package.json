{
  "name": "@thesis/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "THESIS CLI - Command-line interface",
  "bin": {
    "thesis": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@thesis/protocol": "workspace:*",
    "@thesis/skills": "workspace:*",
    "commander": "^12.0.0",
    "axios": "^1.6.5",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "tsx": "^4.7.0"
  }
}
