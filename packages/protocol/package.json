{
  "name": "@thesis/protocol",
  "version": "0.1.0",
  "type": "module",
  "description": "Core protocol types for THESIS: contracts, events, and commands",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
